<h1><%= pluralize(@users.size, "User") %></h1>

<ul class="users">
  <% @users.each do |user| %>
    <li>
      <%= link_to profile_image(user), user %>
      <%= link_to user.name, user %>
      <br>
      <span class="date">
        <%= user.created_at.strftime("Member since: %B %e, %Y") %>
      </span>
    </li>
  <% end %>
</ul>
