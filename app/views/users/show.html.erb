<section class="user">

  <%= profile_image(@user) %>
  <h1><%= @user.name %></h1>
  <h2><%= mail_to(@user.email) %></h2>

  <div class="actions">
    <% if current_user?(@user) %>
      <%= link_to "Edit Account", edit_user_path,
        class: "button edit" %>
    <% end %>
    <% if current_user_admin? %>
      <%= link_to "Delete Account", user_path(@user),
        class: "button delete", method: :delete,
        data: { confirm: "Are you sure?" } %>
    <% end %>
  </div>

  <% if @reviews.present? %>
    <h3>Reviews</h3>
    <% @reviews.each do |review| %>
      <div class="review">
        <div class="details">
          <div class="image">
            <%= link_to (image_tag review.movie.image_file_name), review.movie %>
          </div>
          <span class="title">
            <%= link_to review.movie.title, review.movie %>
          </span>
          <%= render "shared/stars", percent: review.stars_as_percent %>
          <span class="date">
            <%= time_ago_in_words(review.created_at) %> ago...
          </span>
          <p>
            <%= review.comment %>
          </p>
        </div>
      </div>
    <% end %>
  <% end %>

  <aside>
    <% if @favorite_movies.present? %>
      <h3>Favorite Movies</h3>
      <div class="favorite-movies">
        <% @favorite_movies.each do |movie| %>
          <%= link_to (image_tag movie.image_file_name), movie %>
        <% end %>
      </div>
    <% end %>
  </aside>

</section>
